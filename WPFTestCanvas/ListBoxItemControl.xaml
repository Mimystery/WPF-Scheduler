<UserControl x:Class="WPFTestCanvas.ListBoxItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTestCanvas"
             mc:Ignorable="d" 
             d:DesignHeight="450">

    <Border Padding="10" BorderThickness="1"  Background="MintCream" 
            Height="100" CornerRadius="10" HorizontalAlignment="Stretch">
        <StackPanel>
            <TextBlock Text="Это элемент списка!" 
                       FontSize="16" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"/>
            <TextBlock Text="Ещё один элемент!" 
                       FontSize="16" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"/>
            <TextBlock Text="И ещё один элемент!" 
                       FontSize="16" 
                       FontWeight="Bold"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"/>
            <TextBox></TextBox>

        </StackPanel>
    </Border>
</UserControl>
