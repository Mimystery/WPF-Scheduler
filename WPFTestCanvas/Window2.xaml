<Window x:Class="WPFTestCanvas.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTestCanvas"
        mc:Ignorable="d"
        Title="Window2"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Width="1200" Height="800"
        ShowInTaskbar="False"
        Topmost="True">
    <Grid>

        <Button HorizontalAlignment="Left" Width="30" Height="30" Margin="100,62,0,708" Command="{Binding CloseDetailsCommand}">
           
        </Button>

        <Border Width="1070" HorizontalAlignment="Right" CornerRadius="10 0 0 10" Background="PapayaWhip" Padding="10" Margin="5 5 0 5">

            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Height="30" Width="500" VerticalAlignment="Top" Margin="0 20 0 0" Text="Order Details" FontSize="20" TextAlignment="Center"></TextBlock>
                <TextBlock Text="Name: " FontSize="15" Width="100" HorizontalAlignment="Left" Margin="5 10 0 0"></TextBlock>
                <TextBox Width="300" HorizontalAlignment="Left" FontSize="16" Margin="5 5 0 0"></TextBox>
            </StackPanel>
        </Border>
    </Grid>
</Window>
